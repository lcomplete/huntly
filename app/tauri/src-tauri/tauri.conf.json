{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Huntly",
  "version": "0.4.6",
  "identifier": "lcomplete.huntly",
  "build": {
    "beforeDevCommand": "yarn sync-server && yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Huntly",
        "width": 680,
        "height": 720,
        "titleBarStyle": "Visible"
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/favicon-16x16.png",
      "icons/favicon-32x32.png",
      "icons/favicon-128x128.png",
      "icons/favicon-128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    },
    "resources": {
      "server_bin/*": "./"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "",
      "endpoints": [
        "https://github.com/lcomplete/huntly/releases/latest/download/latest.json"
      ]
    }
  }
}
